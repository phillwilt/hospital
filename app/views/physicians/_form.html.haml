= form_for @physician do |f|
  - if @physician.errors.any?
    #error_explanation
      %h2= "#{pluralize(@physician.errors.count, "error")} prohibited this physician from being saved:"
      %ul
        - @physician.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save', class: 'button'
